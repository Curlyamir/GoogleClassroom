<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin1">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif-light"
            android:text="Teachers"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:id="@+id/teacher_txt"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/teacher_txt"
            android:layout_alignBottom="@id/line_simple1"
            android:layout_marginLeft="175dp"
            android:background="@drawable/ic_teacher_add_black_24dp"
            android:id="@+id/add_teachers"/>
        <ImageView
            android:layout_width="350dp"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/teacher_txt"
            android:layout_height="5dp"
            android:id="@+id/line_simple1"
            android:background="@color/colorPrimary"/>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="0dp"
        android:id="@+id/linear1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teachers_name_recView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif-light"
            android:text="Students"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:id="@+id/student_txt"/>
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_group_add_black_24dp"
            android:layout_toEndOf="@id/student_txt"
            android:layout_marginStart="200dp"
            android:layout_alignBottom="@+id/line_simple2"
            android:id="@+id/add_students"/>
        <ImageView
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_alignBottom="@id/student_txt"
            android:id="@+id/line_simple2"
            android:layout_marginLeft="20dp"
            android:background="@color/colorSDark" />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="0dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/students_name_recView"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"/>

    </LinearLayout>


</LinearLayout>